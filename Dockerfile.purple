# Dockerfile.purple
FROM python:3.11-slim

WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    rm -rf /root/.cache/pip  # Clean pip cache to reduce image size

# Copy all application code and necessary assets
COPY . .

# Expose the port for the math solver agent (matching app.py)
EXPOSE 8000

# Health check to ensure the agent is responsive
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/api || exit 1

# Command to run the Purple Agent with production settings
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000", "--no-access-log"]