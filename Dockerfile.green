# Dockerfile.green
FROM python:3.11-slim

WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    rm -rf /root/.cache/pip  # Clean pip cache to reduce image size

# Copy only files essential for the Green Agent (evaluator)
COPY green_app.py .
COPY green_agent/ ./green_agent/
COPY dataset_matematico.py .          # Assuming this exists for the dataset
COPY templates/ ./templates/          # HTML templates for the web interface
COPY static/ ./static/                # Static files (CSS, favicon)

# Expose the port for the evaluation agent (matching green_app.py)
EXPOSE 8001

# Health check for AgentBeats compatibility
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8001/health || exit 1

# Command to run the Green Agent
CMD ["python", "green_app.py"]
# Alternative using uvicorn for better performance:
# CMD ["uvicorn", "green_app:app", "--host", "0.0.0.0", "--port", "8001", "--no-access-log"]